{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Quizz</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Datebegin</th>
                <td>{{ entity.dateBegin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateend</th>
                <td>{{ entity.dateEnd|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>
    {{ dump(entity) }}
    {{ dump(responses) }}
    {{ dump(questions) }}
        <ul class="record_actions">
    <li>
        <a href="{{ path('quizz') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('quizz_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
